@using TobesMediaWebClient.Pages.Components
@using TobesMediaCore.Data.Media
@inherits LayoutComponentBase

<div class="grid w-100 ">
    <div class="w-full">
        <div class="inline-block">
            <BannerButton Selected="(CurrentMediaType == MediaType.Movies?true:false)" OnBannerClick="() => { CurrentMediaType = MediaType.Movies; }" Text="Movies"></BannerButton>
        </div>
        <div class="inline-block">
            <BannerButton Selected="(CurrentMediaType == MediaType.Shows?true:false)" OnBannerClick="() => { CurrentMediaType = MediaType.Shows; }" Text="Shows"></BannerButton>
        </div>
        <div class="inline-block">
            <BannerButton Selected="(CurrentMediaType == MediaType.Anime?true:false)" OnBannerClick="() => { CurrentMediaType = MediaType.Anime; }" Text="Anime"></BannerButton>
        </div>
        <div class="inline-block">
            <div class="flex align-items-center border-2 border-green-700">
                <input @bind="SearchTerm" style="border:solid; border-color:gray;" class="text-white border-gray-600 border-solid focus:border-white bg-transparent" />
            </div>
        </div>
        </div>
        <div class="flex flex-wrap row-auto w-screen">
            <CascadingValue Value="SearchTerm">
                <CascadingValue Value="CurrentMediaType">
                    <CascadingValue Value="FilterResults">
                        <CascadingValue Value="CheckDownloads">
                            @Body
                        </CascadingValue>
                    </CascadingValue>
                </CascadingValue>
            </CascadingValue>
        </div>
    </div>


@code {
    private string SearchTerm { get; set; }
    private MediaType CurrentMediaType { get; set; }
    private bool FilterResults { get; set; }
    private bool CheckDownloads { get; set; }
}
